---
import Section from "@/components/Section.astro";
import { projects } from "@cv";
---

<Section title="Proyectos">
    <ul>
        {
            projects.map(({ name, url, description, isActive, highlights }) => (
                <li>
                    <article>
                        <header>
                            <h3>
                                <a href={url} title={`Ver el proyecto ${name}`}>
                                    {name}
                                </a>
                                {isActive && <span> &bull;</span>}
                            </h3>
                            <p>{description}</p>
                        </header>
                        <footer>
                            {highlights.map((highlight) => (
                                <span>{highlight}</span>
                            ))}
                        </footer>
                    </article>
                </li>
            ))
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    article {
        border: 1px solid #f2f2f2;
        border-radius: 0.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        height: 100%;
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
    }

    article h3 span {
        color: rgb(0, 188, 47);
    }

    article a {
        color: #111;
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 0.25rem;
    }

    article footer {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
    }

    article footer span {
        border-radius: 6px;
        background: #eee;
        color: #333;
        font-size: 0.6rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>
