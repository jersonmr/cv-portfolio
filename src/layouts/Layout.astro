---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    *,
    *::before,
    *::after {
        box-sizing: border-box;
        position: relative;
        min-width: 0;
    }
    html {
        font-family: Menlo, Monaco, "Lucida Console", "Courier New", Courier,
            monospace;
        background: #fff;
        letter-spacing: -0.025rem;
    }

    body,
    figure {
        margin: 0;
        padding: 0;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        margin: 0;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }

    p {
        color: #777;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
        text-wrap: pretty;
    }

    a {
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    code {
        font-family: Menlo, Monaco, "Lucida Console", "Courier New", Courier,
            monospace;
        font-size: 0.9rem;
        background: #f5f5f5;
        padding: 0.2rem 0.4rem;
        border-radius: 0.2rem;
    }

    pre {
        font-family: Menlo, Monaco, "Lucida Console", "Courier New", Courier,
            monospace;
        font-size: 0.9rem;
        background: #f5f5f5;
        padding: 0.2rem 0.4rem;
        border-radius: 0.2rem;
        overflow-x: auto;
    }

    img {
        max-width: 100%;
        display: block;
    }

    body {
        min-height: 100dvh;
    }
</style>
